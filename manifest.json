{

  "manifest_version": 2,
  "name": "hft-app",
  "version": "1.3",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "96": "icon.png"
  },

  "browser_action": {
    "default_icon": {
      "38": "icon.png"
    },
    "default_title": "HFT App"
  },

  "permissions": [
    "webRequest",
    "cookies",
    "storage",
    "https://lsf.hft-stuttgart.de/*",
    "https://mobile.hft-stuttgart.de/*",
    "*://sws.maxmanager.xyz/*"
  ],

  "background": {
    "scripts": ["background.js"]
  }
}
