{
  "manifest_version": 2,
  "name": "hft-app",
  "version": "3.0.2",
  "description": "The HFT App",
  "browser_specific_settings": {
    "gecko": {
      "id": "hft-app-firefox@hft-app.de"
    }
  },

  "icons": {
    "96": "icon.png"
  },
  "browser_action": {
    "default_icon": {
      "38": "icon.png"
    },
    "default_title": "HFT App"
  },
  "permissions": [
    "webRequest",
    "cookies",
    "storage",
    "https://lsf.hft-stuttgart.de/*",
    "https://mobile.hft-stuttgart.de/*",
    "*://sws.maxmanager.xyz/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
