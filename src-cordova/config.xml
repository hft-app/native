<?xml version='1.0' encoding='utf-8'?>
<widget id="de.hft.app" version="3.0.8" xmlns="http://www.w3.org/ns/widgets">
  <name>HFT App</name>
  <description>
    The HFT App
  </description>
  <author email="info@hft-app.de" href="http://hft-app.de">
    Lukas Jans &amp; Christoph Walcher
  </author>
  <content src="index.html"/>
  <plugin name="cordova-plugin-whitelist" spec="1"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>

  <preference name="DisallowOverscroll" value="true"/>
  <preference name="StatusBarOverlaysWebView" value="false"/>
  <preference name="StatusBarBackgroundColor" value="#D41A17"/>
  <preference name="StatusBarDefaultScrollToTop" value="true"/>

  <platform name="android">
    <allow-intent href="market:*"/>
    <icon src="../image/icon.png" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="../image/dist/icon_60.png" width="60" height="60"/>
    <icon src="../image/dist/icon_120.png" width="120" height="120"/>
    <!-- iPad -->
    <icon src="../image/dist/icon_76.png" width="76" height="76"/>
    <icon src="../image/dist/icon_152.png" width="152" height="152"/>
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="../image/dist/icon_40.png" width="40" height="40"/>
    <icon src="../image/dist/icon_80.png" width="80" height="80"/>
    <!-- iPhone / iPod Touch -->
    <icon src="../image/dist/icon_57.png" width="57" height="57"/>
    <icon src="../image/dist/icon_114.png" width="114" height="114"/>
    <!-- iPad -->
    <icon src="../image/dist/icon_72.png" width="72" height="72"/>
    <icon src="../image/dist/icon_144.png" width="144" height="144"/>
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="../image/dist/icon_29.png" width="29" height="29"/>
    <icon src="../image/dist/icon_58.png" width="58" height="58"/>
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="../image/dist/icon_50.png" width="50" height="50"/>
    <icon src="../image/dist/icon_100.png" width="100" height="100"/>
  </platform>
</widget>
