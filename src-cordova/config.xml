<?xml version='1.0' encoding='utf-8'?>
<widget id="de.hft.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>HFT App</name>
  <description>
    The HFT App.
  </description>
  <author email="dev@cordova.apache.org" href="http://hft-app.de">
    Lukas Jans &amp; Christoph Walcher
  </author>
  <!-- this hook will point your config.xml to the DevServer on Serve -->
  <content src="index.html"/>
  <plugin name="cordova-plugin-whitelist" spec="1"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>

  <preference name="StatusBarBackgroundColor" value="#D41A17"/>
  <preference name="StatusBarDefaultScrollToTop" value="true"/>
  <preference name="StatusBarStyle" value="blacktranslucent"/>

  <icon src="../image/icon.png"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>
