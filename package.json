{
  "name": "hft-app",
  "version": "3.0.5",
  "private": true,
  "description": "",
  "author": "Christoph Walcher & Lukas Jans",
  "scripts": {
    "build:webext": "webpack --config webpack.config.webext.js --mode=production",
    "sign:webext": "cd dist; web-ext sign --api-key=$AMO_JWT_ISSUER --api-secret=$AMO_JWT_SECRET --id hft-app-firefox@hft-app.de; cd ..",
    "serve:dev": "webpack-dev-server --config webpack.config.cordova.js",
    "lint": "eslint --ext .js,.vue src tests",
    "test": "jest"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.18",
    "@fortawesome/free-brands-svg-icons": "^5.8.2",
    "@fortawesome/free-solid-svg-icons": "^5.8.2",
    "@fortawesome/vue-fontawesome": "^0.1.6",
    "vue": "^2.6.10",
    "vue-i18n": "^8.11.2",
    "vue-router": "^3.0.6",
    "vuex": "^3.1.0",
    "vuex-persist": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-vue": "^6.1.2",
    "eslint-plugin-vue-i18n": "^0.3.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-tags-plugin": "^2.0.17",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-serializer-vue": "^2.0.2",
    "raw-loader": "^4.0.0",
    "sass": "^1.25.0",
    "sass-loader": "^8.0.2",
    "vue-jest": "^3.0.4",
    "vue-loader": "^15.7.0",
    "vue-template-compiler": "^2.6.10",
    "web-ext": "^4.1.0",
    "webpack": "^4.30.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "zip-webpack-plugin": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^enviroment$": "<rootDir>/enviroment.development.json",
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ]
  },
  "license": "ISC"
}
